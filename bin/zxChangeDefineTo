#!/bin/bash
# replace is using node js 'npm install replace -g'
path='/Users/niko/work/workspace/handday/crmZztx/crmZztx/pages/resources/js/constdefined.js'


oemPattern="var Oem = (.*?)$"
envPattern="var _type = RunTimeType.(.*?)$"
isOEMPattern="IsOem: (.*?)$"

oemValue="var Oem = Oem1;"

case $1 in

dev)
envValue="var _type = RunTimeType.LOCATION;"
isOEMValue="IsOem: false,"
;;

cn)
envValue="var _type = RunTimeType.ONLINE_TEST;"
isOEMValue="IsOem: false,"
;;

com)
envValue="var _type = RunTimeType.ONLINE;"
isOEMValue="IsOem: false,"
;;

apple)
envValue="var _type = RunTimeType.APPSTORE;"
isOEMValue="IsOem: false,"
;;

oem1)
envValue="var _type = RunTimeType.ONLINE;"
isOEMValue="IsOem: true,"
;;

oem2)
oemValue="var Oem = Oem2;"
envValue="var _type = RunTimeType.ONLINE;"
isOEMValue="IsOem: true,"
;;

*)
echo 'Usage: dev|cn|com|apple|oem1|oem2'
exit 0
;;
esac

replace "${oemPattern}" "${oemValue}" $path
replace "${envPattern}" "${envValue}" $path
replace "${isOEMPattern}" "${isOEMValue}" $path

exit 0


